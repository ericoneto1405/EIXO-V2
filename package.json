{
  "name": "eixo-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "install:clean": "rm -rf node_modules frontend/node_modules server/node_modules && npm ci",
    "install:reset": "rm -rf node_modules frontend/node_modules server/node_modules package-lock.json && npm install",
    "studio": "npm run prisma:studio --workspace server",
    "migrate": "npm run prisma:migrate --workspace server",
    "generate": "npm run prisma:generate --workspace server",
    "seed": "npm run seed --workspace server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace frontend",
    "dev:server": "npm run dev --workspace server",
    "build": "npm run build --workspace frontend",
    "preview": "npm run preview --workspace frontend",
    "start:server": "npm run start --workspace server",
    "install:frontend": "npm install --workspace frontend",
    "install:server": "npm install --workspace server"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
